generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role{
  admin 
  user
}


model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  password String
  address String?
  image String?
  role Role @default(user)
  phone String?
  createdAt DateTime @default(now())
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  image     String
  content   String
  published Boolean @default(false)
  date DateTime @default(now())
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}


model About {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  stats       Json
  skills      Json
  createdAt   DateTime @default(now())
}


model Works {
  id     Int @id @default(autoincrement())
  slides Json
}



























